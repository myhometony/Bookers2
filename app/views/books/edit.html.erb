<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">本のタイトル</label>
  <%= f.text_field :title %>
  <label for="inputBody">感想</label>
  <%= f.text_area :body %>
