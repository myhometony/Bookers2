<p id="notice">Welcome! You have sign up successful.</p>

<div class="container px-5 px-sm-0">
  <div class="row">

    <dive class= "col-md-3">

      <h2>User info</h2>
      <img>
      <table class="table">
        <tr>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
        <th></th>
        </tr>
      </table>
      <a class="btn btn-outline-secondary btn-block" href=""><i class="fa-solid fa-user-gear"></i></a>

      <h2 class="mt-3">New book</h2>
       <form action="/books" accept-charset="UTF-8" method="post">
         <%= form_with model: @book do |f| %>
         <div class="form-group">
           <label for="book_title">本のタイトル</label>
           <%= f.text_field :title %>
        </div>
         <div class="form-group">
           <label for="book_opinion">感想</label>
           <%= f.text_area :body %>
         </div>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
           <%= f.submit 'Create Book' %>
         </div>
         <% end %>
       </form>
    </div>

    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
       <thead>
        <tr><th></th><th>本のタイトル</th><th>感想</th><th colspan="3"></th></tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
       <% end %>
       </tbody>
       </table>
    </div>

  </div>
</div>