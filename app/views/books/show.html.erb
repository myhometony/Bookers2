
   <%= render 'users/info', user: @user %>


    <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
       <table class="table table-hover table-inverse">
       <thead>
        <tr><th></th><th>本のタイトル</th><th>感想</th><th colspan="3"></th></tr>
      </thead>
      <tbody>
        <tr>
        <td><%= image_tag @book.user.get_profile_image(80,80) %><%= link_to user_path(@book.user.id) do %><%= @book.user.name %><% end %></td>
        <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_3852" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" , class:"btn btn-sm btn-danger destroy_book_3852" %></td>
        <% end %>
        </tr>
      </tbody>
      </table>
    </div>


