<h1>Books#show</h1>


<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/info', user: current_user %>


    <div class="col-md-8 offset-md-1">
       <h2>Books detail</h2>
       <table class="table table-hover table-inverse">
       <thead>
        <tr><th></th><th>本のタイトル</th><th>感想</th><th colspan="3"></th></tr>
      </thead>
      <tbody>
        <tr>
        <td><%= image_tag @user.get_profile_image(80,80) %></td>
        <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      </tbody>
      </table>
    </div>

  </div>
</div>


